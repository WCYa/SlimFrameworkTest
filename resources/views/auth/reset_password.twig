{% extends 'layouts/app.twig' %}

{% block content %}

    <h2 class="font-weight-bold">重設密碼</h2>
    <hr /><br />

    <p class="text-light bg-dark col-md-6">請輸入以下資訊來重新設定密碼.</p>
    <br />
    <form class="col-md-6" method="post" action="{{ path_for('reset-password') }}">
        <div class="form-group">
            <label for="oPasswd">舊密碼</label>
            <input type="password" name="oPasswd" class="form-control {% if error.oPasswd %}{{ 'is-invalid' }}{% endif %}" required>
            <span class="help-block {% if error.oPasswd %}{{ 'text-danger' }}{% endif %}">{{ error.oPasswd }}</span>
        </div>
        <div class="form-group">
            <label for="nPasswd">新密碼</label>
            <input type="password" name="nPasswd" class="form-control {% if error.nPasswd %}{{ 'is-invalid' }}{% endif %}" required>
            <span class="help-block {% if error.nPasswd %}{{ 'text-danger' }}{% endif %}">{{ error.nPasswd }}</span>
        </div>
        <div class="form-group">
            <label for="nnPasswd">再次輸入新密碼</label>
            <input type="password" name="nnPasswd" class="form-control {% if error.nnPasswd %}{{ 'is-invalid' }}{% endif %}" required>
            <span class="help-block {% if error.nnPasswd %}{{ 'text-danger' }}{% endif %}">{{ error.nnPasswd }}</span>
        </div>
        <br /><br />
        <div class="form-group float-right">
            <button type="submit" class="btn btn-outline-primary">確認修改</button>
            <a href="{{ path_for('home') }}" class="btn btn-secondary">返回</a>
        </div>
        {{ csrf.field | raw }}
    </form>
    
{% endblock %}